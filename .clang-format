BasedOnStyle: LLVM
IndentWidth: 3
BreakBeforeBraces: Custom
BraceWrapping:
  AfterClass:      true
  AfterControlStatement: true
  AfterEnum:       true
  AfterFunction:   true
  AfterNamespace:  true
  AfterObjCDeclaration: true
  AfterStruct:     true
  AfterUnion:      true
  BeforeCatch:     true
  BeforeElse:      true
  IndentBraces:    false
SortIncludes: false
PointerAlignment: Left
AllowShortFunctionsOnASingleLine: false
FixNamespaceComments: true
ColumnLimit: 132
AlwaysBreakTemplateDeclarations: Yes